<Window x:Class="TorrentCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TorrentCollector"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500">
    <Grid>
        <StackPanel>
            <Button FontSize="20" x:Name="btnSelectTextFile" Click="BtnSelectTextFile_Click">Choose text file with line-separated hashes</Button>
            <Button FontSize="20" x:Name="btnSelectTorrentFolder" Click="BtnSelectTorrentFolder_Click">Choose folder with torrent files</Button>
            <Button IsEnabled="False" FontSize="50" x:Name="btnZipIt" Click="BtnZipIt_Click">Zip it!</Button>
            
        </StackPanel>
    </Grid>
</Window>
